<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" xmlns:log4j="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSSSSSSSS} [%t] %-5level %logger{36}: %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="console" />
        </Root>

        <Logger name="webtail" level="TRACE" />

        <Logger name="io.netty.handler.logging.LoggingHandler" level="TRACE" />
    </Loggers>
</Configuration>
